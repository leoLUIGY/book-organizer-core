@model BookOrganizer.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="fw-bold text-danger">@ViewData["Title"]</h1>
        <p class="text-muted">Are you sure you want to delete this book? This action cannot be undone.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <h4 class="card-title fw-bold mb-3">@Model.Title</h4>
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.description)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.description)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.RegisterDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.RegisterDate)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.Genre)</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Html.DisplayFor(m => m.Genre)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.actualPage)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.actualPage)</dd>

                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(m => m.TotalPages)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.TotalPages)</dd>
                    </dl>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">
                    <form asp-action="Delete" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger shadow-sm">🗑️ Delete</button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">← Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
