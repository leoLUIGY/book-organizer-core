@model BookOrganizer.Models.BookGenreViewModel

@{
    ViewData["Title"] = "Books";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">+ Add Book</a>
    </div>

    @if (!Model.Books.Any())
    {
        <div class="alert alert-info text-center shadow-sm" role="alert">
            No books found. Please add a new one.
        </div>
    }
    else
    {
        <form asp-controller="TodoBook" asp-action="Index" method="get" class="row g-3 align-items-end mb-4">
            <div class="col-md-3">
                <label asp-for="BookGenre" class="form-label fw-semibold">Genre</label>
                <select asp-for="BookGenre" asp-items="Model.Genres" class="form-select shadow-sm">
                    <option value="">All</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Title</label>
                <input type="text" name="SearchString" class="form-control shadow-sm" placeholder="Search by title..." />
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100 shadow-sm">Filter</button>
            </div>
        </form>

        <div class="row g-4">
            @foreach (var item in Model.Books)
            {
                <div class="col-sm-6 col-lg-4 col-xl-3">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body d-flex flex-column">
                            <small class="text-muted">@Html.DisplayFor(modelItem => item.RegisterDate)</small>
                            <h5 class="card-title mt-2 fw-bold">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text text-truncate">@Html.DisplayFor(modelItem => item.description)</p>
                            <p class="card-text">
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Genre)</span>
                            </p>

                            <div class="progress mb-3">
                                <div class="progress-bar bg-success" style="width: @item.GetPercentageCompleted()%">
                                    @item.GetPercentageCompleted()%
                                </div>
                            </div>

                            <div class="mt-auto d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>