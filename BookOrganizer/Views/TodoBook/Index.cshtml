@model BookOrganizer.Models.BookGenreViewModel

@{
    ViewData["Title"] = "Index";
    
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary" >Create New</a>
</p>


@if (!Model.Books.Any())
{
    <div class="alert alert-info" role="alert">
        No books found. Please add a new book.
    </div>

}
else
{
    <form asp-controller="TodoBook" asp-action="Index" method="get">
        <p>
            <select asp-for="BookGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>

            <label>Title: <input type="text" name="SearchString" /> </label>
            <input type="submit" value="Filter" />
        </p>
    </form>
}

<div class="d-flex flex-wrap justify-content-center">

        @foreach (var item in Model.Books)
        {
             <div class="col-sm-3 mb-3 mb-sm-0">
                <div class="card" style="width: 18rem; height: 16rem;">
                        <div class="card-body d-flex flex-column justify-content-between">
                        <span>@Html.DisplayFor(modelItem => item.RegisterDate)</span>
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.description)</p>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Genre)</p>

                            <div class="progress" role="progressbar" aria-label="Success example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar text-bg-success" style="width: @item.GetPercentageCompleted()%">
                                    @item.GetPercentageCompleted()%
                                </div>
                            </div>

                            <div class="d-flex justify-content-around">

                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
               
                            </div>
                        </div>
                    </div>
                </div>
            }
    </div>





